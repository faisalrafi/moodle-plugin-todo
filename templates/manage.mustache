{{!
    @template local_message/manage


    Example context (json):
    {

    }
}}

<h3 class="mt-5 text-center display-4 fw-bold">Tasks</h3>

<table class="table table-hover table-success">
   <thead class="thead">
    <tr>
      {{! <th scope="col" class="text-center">SL. No</th> }}
      <th scope="col" class="text-center">Title</th>
      <th scope="col" class="text-center">Description</th>
      <th scope="col" class="text-center">Date</th>
      <th scope="col" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#tasks}}
     <tr>
          {{! <td class="text-center">{{id}}
          <td class="text-center">{{title}}</td>
          <td class="text-center">{{description}}</td>
          <td class="text-center">{{date}}</td>
          <td class="text-center">
              <input type="button" class="btn btn-primary ml-2" value="Edit" onclick="location.href='{{editurl}}?taskid={{id}}'">
              <button id="delete-btn-{{id}}" class="btn btn-danger delete-btn">Delete</button>
          </td>
     </tr>
    {{/tasks}}
  </tbody>
</table>
<div class="text-center pt-5">
    <a href="{{editurl}}" class="btn btn-primary">Create Task</a>
</div>